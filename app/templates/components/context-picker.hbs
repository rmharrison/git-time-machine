{{#if defaultUser.avatarUrl}}
    {{#link-to 'index.user' defaultUser.login}}
        <img width="40px" height="40px" src={{defaultUser.avatarUrl}} />
    {{/link-to}}
    {{input value=targetUser enter=specifyUser}}
{{/if}}

{{#if session.isAuthenticated}}
    <button onclick={{action 'logout'}}>Logout</button>
{{/if}}
