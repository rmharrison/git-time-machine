{{#if context.defaultUser.avatarUrl}}
    {{#link-to 'index.user' context.defaultUser.login}}
        <img width="40px" height="40px" src={{context.defaultUser.avatarUrl}} />
    {{/link-to}}
    {{input value=model.targetUser enter=(action "changeUser" model.targetUser)}}

    {{#power-select
            options=model.selectedUser.githubRepositories
            selected=selectedRepo
            onchange=(action "changeRepo")
            placeholder="Choose a repo"
            as |repo|}}
        {{repo.name}}
    {{/power-select}}

    {{#if selectedRepo}}
        {{#power-select
                options=model.selectedRepo.branches
                selected=selectedBranch
                onchange=(action "changeBranch")
                placeholder="Choose a branch"
                as | branch | }}
            {{branch.name}}
        {{/power-select}}
    {{/if}}
{{/if}}

{{#if session.isAuthenticated}}
    <button onclick={{action 'logout'}}>Logout</button>
{{/if}}
